{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This CloudFormation template creates a certificate for nickplutt.com",
    "Resources": {
        "nickplutt": {
            "Properties": {
                "DomainName": "nickplutt.com",
                "DomainValidationOptions": [
                    {
                        "DomainName": "nickplutt.com",
                        "ValidationDomain": "nickplutt.com"
                    }
                ],
                "SubjectAlternativeNames": [
                    "*.nickplutt.com"
                ]
            },
            "Type": "AWS::CertificateManager::Certificate"
        }
    }
}